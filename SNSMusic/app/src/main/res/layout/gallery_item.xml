<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/card_background"
    >
    <ImageView
        android:id="@+id/item_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/item_number_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/number_background"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        />

    <ViewFlipper
        android:id="@+id/item_preview_viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoStart="true"
        android:flipInterval="5000"
        android:layout_alignParentBottom="true"
        android:inAnimation="@anim/abc_slide_in_bottom"
        android:outAnimation="@anim/abc_fade_out"
        android:animationCache="true"
        android:measureAllChildren="false"
        android:animateFirstView="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_detail_1_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_list"
                />
            <TextView
                android:id="@+id/detail_1_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:background="#CCFFFFFF"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_detail_2_imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_artist"
                />
            <TextView
                android:id="@+id/detail_2_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:background="#CCFFFFFF"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </ViewFlipper>

</RelativeLayout>