<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/track_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:background="#DDFFFFFF"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >

            <LinearLayout
                android:id="@+id/track_youtube_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/spinner_background"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2.5dp"
                android:clickable="true">

                <ImageView
                    android:id="@+id/track_youtube_Image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_youtube"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="7dp"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/track_youtube_Text"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:text="@string/youtube"
                    android:textColor="@android:color/white"/>
                 </LinearLayout>

            <LinearLayout
                android:id="@+id/track_lyrics_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/spinner_background"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true">

                <ImageView
                    android:id="@+id/track_lyrics_Image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lyrics"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="7dp"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/track_lyrics_Text"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:text="@string/lyrics"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/track_back_Image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_menu"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="3dp"
            android:scaleType="fitXY"
            android:clickable="true"/>

    </RelativeLayout>
</LinearLayout>